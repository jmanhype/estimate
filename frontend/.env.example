# ==============================================
# EstiMate Frontend - Environment Variables
# ==============================================

# Environment
VITE_ENVIRONMENT=development  # development | staging | production

# ==============================================
# API Configuration
# ==============================================

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:8000/api/v1

# API Timeout (milliseconds)
VITE_API_TIMEOUT_MS=30000

# ==============================================
# Authentication (Supabase)
# ==============================================

# Supabase Client
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ==============================================
# Payment Integration (Stripe)
# ==============================================

# Stripe Publishable Key (Use test key for development)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key

# ==============================================
# Feature Flags
# ==============================================

VITE_FEATURE_TEMPLATES_ENABLED=true
VITE_FEATURE_TIMELINE_ENABLED=true
VITE_FEATURE_CONTRACTOR_MODE_ENABLED=true
VITE_FEATURE_AI_FEEDBACK_ENABLED=false

# ==============================================
# Monitoring & Analytics
# ==============================================

# Sentry (Error Tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Google Analytics (Optional)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# ==============================================
# File Upload Settings
# ==============================================

# Maximum file size for photo uploads (in MB)
VITE_MAX_PHOTO_SIZE_MB=10

# Maximum number of photos per project
VITE_MAX_PHOTOS_PER_PROJECT=20

# Accepted image formats
VITE_ACCEPTED_IMAGE_FORMATS=.jpg,.jpeg,.png,.heic

# ==============================================
# Performance & Caching
# ==============================================

# React Query cache time (milliseconds)
VITE_CACHE_TIME_MS=300000  # 5 minutes

# Stale time for pricing data (milliseconds)
VITE_PRICING_STALE_TIME_MS=172800000  # 48 hours

# ==============================================
# UI Configuration
# ==============================================

# Default page size for pagination
VITE_DEFAULT_PAGE_SIZE=20

# Debounce time for search inputs (milliseconds)
VITE_SEARCH_DEBOUNCE_MS=300

# Toast notification duration (milliseconds)
VITE_TOAST_DURATION_MS=5000

# ==============================================
# Development Settings
# ==============================================

# Enable React Query DevTools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable Redux DevTools (if using Redux)
# VITE_ENABLE_REDUX_DEVTOOLS=true

# Enable accessibility audit in development
VITE_ENABLE_AXE_AUDIT=true
